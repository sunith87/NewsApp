<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/article_item_padding"
                                    android:layout_marginRight="@dimen/article_item_padding"
                                    android:foreground="?android:attr/selectableItemBackground"
                                    android:clickable="true">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/item_padding_top_bottom"
            android:paddingTop="@dimen/item_padding_top_bottom"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/article_thumbnail_imageview"
                android:layout_width="@dimen/article_image_width_height"
                android:layout_height="@dimen/article_image_width_height"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/article_image_padding"
                android:layout_marginRight="@dimen/article_image_padding"/>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/article_details_headline_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@android:color/black"
                    tools:text="Headline"/>

            <TextView
                    android:id="@+id/article_details_date_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@android:color/darker_gray"
                    tools:text="01/01/2019"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>